			x:任意操作系统
			a:apache
			m:mysql
			p:php
			p:perl
		wamp
			w:windows
		phpstudy
	c.phpstudy文件夹简介
		apache
			bin 	存放apache命令的位置
			conf    存放apache配置文件的位置
			logs    存放日志文件的位置
		mysql
			bin     存放mysql命令的位置
			data    存放mysql数据的位置
		www         项目存放的位置
